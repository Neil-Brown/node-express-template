doctype html
html(lang="en")

	head
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		meta( name="Description" content="Improve your singing.")
		title Voice Trainer
		block css
			link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
			script.
				var test = document.createElement("div")
				test.className = "hidden d-none"
				document.head.appendChild(test)
				var cssLoaded = window.getComputedStyle(test).display === "none"
				document.head.removeChild(test)
				if (!cssLoaded) {
						var link = document.createElement("link");
						link.type = "text/css";
						link.rel = "stylesheet";
						link.href = "/static/css/bootstrap/bootstrap.min.css";
						document.head.appendChild(link);
				 }
			link(rel="stylesheet" href = "/css/styles.css")

	body
		.container-fluid
			block main
	block scripts
		script(src="https://cdn.jsdelivr.net/npm/bootstrap.native@3.0.0/dist/bootstrap-native.min.js" integrity="sha384-kvQSltvHvSg/3tzsKo6WscGmhSm10Tqg7f4Sn+okA4GdpCI/h8UjPpU/M4ea/z9V" crossorigin="anonymous" )
		script(integrity="sha256-Ar8gRoPC5q1WesDYDbTfNGtycoPBHeu0EdqqDUcU+C0=").
